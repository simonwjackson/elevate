# This justfile dynamically runs tasks from package.json scripts
# Set the default shell to bash

[group('development')]
moonbeaming-dev:
    nix develop .#moonbeam.ing --command bunx --bun astro dev

[group('production')]
moonbeaming-build:
    nix develop .#moonbeam.ing --command bunx --bun astro check && nix develop .#moonbeam.ing --command bunx --bun astro build

[group('production')]
moonbeaming-preview:
    nix develop .#moonbeam.ing --command bunx --bun astro preview 
